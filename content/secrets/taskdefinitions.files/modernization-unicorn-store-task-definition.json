{
  "family": "modernization-unicorn",
  "networkMode": "awsvpc",
  "containerDefinitions": [
    {
      "name": "modernization-unicorn-store_unicornstore",
      "image": "<YourAccountID>.dkr.ecr.us-west-2.amazonaws.com/modernization-unicorn-store:sqlserver",
      "cpu": 512,
      "memoryReservation": 1024,
      "portMappings": [{
        "containerPort": 80
      }],
      "environment": [
        {
          "name": "ASPNETCORE_ENVIRONMENT",
          "value": "Production"
        }
      ],
      "secrets": [
        {
          "valueFrom": "<arn:aws:secretsmanager:region:aws_account_id:secret:UnicornAppDefaultAdminPassword-xxXXxx>",
          "name": "DefaultAdminPassword"
        },
        {
          "valueFrom": "<arn:aws:secretsmanager:region:aws_account_id:secret:UnicornAppDefaultAdminUsername-xxXXxx>",
          "name": "DefaultAdminUsername"
        },
        {
          "valueFrom": "<arn:aws:secretsmanager:region:aws_account_id:secret:UnicornAppSqlDbServer-xxXXxx>",
          "name": "UnicornDbConnectionStringBuilder__DataSource"
        },
        {
          "valueFrom": "<arn:aws:secretsmanager:region:aws_account_id:secret:UnicornAppSqlDbPassword-xxXXxx>",
          "name": "UnicornDbConnectionStringBuilder__Password"
        },
        {
          "valueFrom": "<arn:aws:secretsmanager:region:aws_account_id:secret:UnicornAppSqlDbUsername-xxXXxx>",
          "name": "UnicornDbConnectionStringBuilder__UserId"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "UnicornStore",
          "awslogs-region": "us-west-2",
          "awslogs-stream-prefix": "web"
        }
      }
    }
  ],
  "executionRoleArn": "arn:aws:iam::<YourAccountID>:role/UnicornStoreExecutionRole",
  "requiresCompatibilities": [
    "FARGATE"
  ],
  "cpu": "1 vcpu",
  "memory": "2 gb"
}
